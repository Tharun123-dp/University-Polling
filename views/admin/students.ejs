<!DOCTYPE html>
<html lang="en">
<head>
    <title>Students List</title>
    <link rel="stylesheet" href="/css/admin.css">
    <style>
        .container {
            text-align: center;
            margin: 20px auto;
            width: 80%;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        table, th, td {
            border: 1px solid #ddd;
            padding: 12px;
        }

        th {
            background-color: #007BFF;
            color: white;
            font-size: 16px;
        }

        td {
            font-size: 14px;
            color: #333;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .delete-btn:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>
    <div class="container">
        <h2>Students List</h2>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>USN</th>
                    <th>Year</th>
                    <th>Degree</th>
                    <th>Branch</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student => { %>
                <tr>
                    <td><%= student.name %></td>
                    <td><%= student.regno %></td>
                    <td><%= student.year %></td>
                    <td><%= student.degree_name %></td>
                    <td><%= student.branch_name %></td>
                    <td>
                        <form method="post" action="/admin/students/delete/<%= student.regno %>">
                            <button class="btn delete-btn">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>
